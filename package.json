{
  "name": "dumpling-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "env-cmd -e dev nodemon ./src/index.ts",
    "prod": "env-cmd -e prod nodemon ./src/index.ts",
    "build": "rm -rf ./build && tsc --build",
    "serve:dev": "env-cmd -e dev node --max_old_space_size=8048 ./build/index.js",
    "serve:uat": "env-cmd -e uat node --max_old_space_size=8048 ./build/index.js",
    "serve:prod": "env-cmd -e prod node --max_old_space_size=8048 ./build/index.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.11.1",
    "graphql": "^16.3.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3"
  }
}
