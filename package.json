{
    "name": "dumpling-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "env-cmd -e dev nodemon",
        "prod": "env-cmd -e prod nodemon ./src/index.ts",
        "build": "rimraf build && tsc -p tsconfig.json && tsc-alias -p tsconfig.json --silent",
        "serve:dev": "env-cmd -e dev node --max_old_space_size=8048 ./build/index.js",
        "serve:uat": "env-cmd -e uat node --max_old_space_size=8048 ./build/index.js",
        "serve:prod": "env-cmd -e prod node --max_old_space_size=8048 ./build/index.js"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./src/test/setup.ts"
        ]
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "env-cmd": "^10.1.0",
        "express": "^4.17.3",
        "express-async-errors": "^3.1.1",
        "express-graphql": "^0.12.0",
        "express-session": "^1.17.2",
        "express-validator": "^6.11.1",
        "express-ws": "^5.0.2",
        "graphql": "^16.3.0",
        "graphql-playground-middleware-express": "^1.7.23",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.3",
        "mongoose": "^6.2.7",
        "redis": "^4.0.6",
        "ws": "^8.5.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.0",
        "jest": "^27.4.7",
        "prettier": "2.6.2",
        "ts-jest": "^27.1.3",
        "tsconfig-paths": "^3.12.0",
        "tsc-alias": "^1.6.0"
    }
}
